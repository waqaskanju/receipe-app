<p style="color: green"><%= notice %></p>

<h1 class="title">Recipes</h1>

<div id="recipes">
<%if @private_recipes.empty?%>
  <h2 class="recipes__null">No recipes</h2>
<%else%>
  <% @private_recipes.each do |recipe| %>
    <%= render 'recipe_list', recipe: %>
  <% end %>
<%end%>
</div>

<%= link_to "New recipe", new_recipe_path, class:'new_recipe' %>
