<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>

<div id="recipes">
<%if @public_recipes.empty?%>
  <h2>No recipes</h2>
<%else%>
  <% @public_recipes.each do |recipe| %>
    <%= render recipe %>
    <p>
      <%= link_to "Show this recipe", recipe %>
    </p>
  <% end %>
<%end%>
</div>

<%= link_to "New recipe", new_recipe_path %>
