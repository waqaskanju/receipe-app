
<%= link_to recipe_path(recipe.id), :action => 'go' do%>
<div class="recipe__content">
  <p class="recipe__content__name">
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>
  <p class="recipe__content__description">
    <strong>Description:</strong>
    <%= recipe.description %>
  </p>
  <%end%>
<%if recipe.user_id == current_user.id %>
  <%= button_to "Delete this recipe", {:controller => :recipes, :action => 'destroy', :id => recipe.id}, method: :delete %>
<%else%>
<%= link_to recipe_path(recipe.id), :action => 'go'%>
<%end%>
</div>
