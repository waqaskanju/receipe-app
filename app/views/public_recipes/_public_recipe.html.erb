
<%= link_to recipe_path(recipe.id), :action => 'go' do%>
<div class="recipe__content">
  <p class="recipe__content__name">
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>
    <p class="recipe__content__username">
    <strong>By:</strong>
    <%= recipe.user.name %>
  </p>
  <p class="recipe__content__total_items">
    <strong>Total food items:</strong>
    #of Items goes here
  </p>
  <p class="recipe__content__total_price">
    <strong>Total price:</strong>
    $price goes here
  </p>
  <%end%>
<%if recipe.user_id == current_user.id %>
  <%= button_to "Delete this recipe", {:controller => :recipes, :action => 'destroy', :id => recipe.id}, method: :delete %>
<%end%>
</div>
